  <!-- giá mỗi option -->
  <section class="team_section layout_padding">
    <div class="container">
      <div class="heading_container heading_center">
        <h2>
          Bảo hiểm phù hợp với nhu cầu của bạn?
        </h2>
        <p>
          Với các gói bảo hiểm sau đây, hãy lựa chọn gói sản phẩm phù hợp với nhu cầu
        </p>
      </div>
      <div class="offset-xl-1 col-xl-10">
        <div class="row">
            @foreach (var item in Model.packageInsurances)
            {
                
            
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">

                <div class="card">
                    <div class="card-header bg-white  p-4 ">
                        <span class="mb-2 txt-package">Gói Bảo hiểm</span>
                        <h3 class="mb-1 packagename-txt text-center">@item.PackageName</h3>
                        
                            
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p>Phạm vi bảo hiểm tối đa mỗi năm hợp đồng</p>
                            </div>
                            <div class="col-md-6">
                                <p>@item.Limit <strong>VND</strong></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <p>Thời hạn bảo hiểm</p>
                            </div>
                            <div class="col-md-6">
                                <p>@item.Duration <strong>năm</strong></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <p>Chi phí</p>
                            </div>
                            <div class="col-md-6">
                                <p>@item.Price <strong>VND</strong></p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body border-top btn-box">
                        
                        @if (User.Identity.IsAuthenticated){
                            <a href="/ContractInsurances/Contract?prdId=@Model.insuranceProducts.ProductId&packageId=@item.PackageId" class=" btn1 btn btn-outline-secondary btn-block btn-lg">
                            Mua Ngay
                          </a>
                        
                    }else{
                        <a href="/Account/Login" class=" btn1 btn btn-outline-secondary btn-block btn-lg">
                            Mua Ngay
                          </a>
                    }

                          
                      
                        
                    </div>
                </div>
            </div>
            }      
        </div>
      </div>
    </div>
  </section>


 





