<!-- quyền lợi nổi bật -->
<section class="service_section layout_padding">
    <div class="container">
      <div class="heading_container heading_center ">
        <h2 class="">
          Quyền lợi nổi bật 
        </h2>
        
      </div>
      <div class="service_container">
        <div class="carousel-wrap ">
          <div class="service_owl-carousel owl-carousel">

            @foreach (var item in Model.outstandingBenefits) {
                <div class="item">
                    
                    <div class="box">
                        <div class="img-box">
                            <img src="~/ProjectLayout/images/@item.Image" alt="" />
                        </div>
                        <div class="detail-box">
                            <h5>
                                @item.OdName
                            </h5>
                            <p>
                                @item.OdDescription
                            </p>
                        </div>
                    </div>
                    
                </div>
                
            }

            
          

          </div>
        </div>
      </div>
      
    </div>
  </section>


  <!-- chi tiết quyền lợi  -->
  <section class="about_section">
    <div class="container-fluid">
        <div class="heading_container heading_center layout_padding-bottom">
        <h2 class="">
          Chi tiết quyền lợi
        </h2>
        
      </div>
      @{
          var a = 1;
      }
      @foreach (var item in @Model.benefitDetails)
        {
            
            if (a%2 == 1)
            {
              <div class="row">
                <div class="col-md-5 offset-md-1">
                  <div class="detail-box pr-md-2">
                    <div class="heading_container">
                      <h3 class="font-bold">
                        @item.Title
                      </h3>
                    </div>
                    
                    <div>
                       @Html.Raw(item.Content)
                    </div>
                    
                
                  </div>
                </div>
                <div class="col-md-6 px-0">
                  <div class="img-box img-detail">
                    <img src="../ProjectLayout/images/@item.Image" class="box_img" alt="about img">
                  </div>
                </div>
                </div>
                a++;
            }
            else
            {
                <div class="row">
                    <div class="col-md-6 px-0">
                      <div class="img-box img-detail">
                        <img src="../ProjectLayout/images/@item.Image" class="box_img" alt="about img">
                      </div>
                    </div>
                    <div class="col-md-5 offset-md-1">
                      <div class="detail-box pr-md-2">
                        <div class="heading_container">
                          <h3 class="font-bold">
                            @item.Title
                          </h3>
                        </div>
                        
                        <div>
                          @Html.Raw(item.Content)
                        </div>
                        
                      </div>
                    </div>
                    
                </div>
                a++;
            }
            

      }
      
    </div>
  </section>




