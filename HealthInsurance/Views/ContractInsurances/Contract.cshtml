@model ContractInformationModel
@{
    ViewData["Title"] = "Contract";
    Layout = "~/Views/Shared/_LayoutContract.cshtml";
}


<section class="service_section layout_padding">
    <div class="container">

        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="cardContract">
                    <div class="card-header p-4">
                            <p class="pt-2 d-inline-block" href="#">HiBOC</p>
                                   
                        <div class="float-right"> 
                            <h5 class="mb-0 text-h5">Hợp Đồng @Model.insuranceProducts.ProductName</h5>
                            <p class="date-create">@DateTime.Now.ToShortDateString()</p>
                        </div>
                    </div>

                    
                    <div class="card-body">
                        <div class="row mb-4">
                            <div class="col-sm-6">
                                <h5 class="mb-3">Bên A:</h5>                                            
                                <h3 class="text-dark mb-1">@Model.userInformation.FullName</h3>
                                         
                                <div>Địa chỉ: @Model.userInformation.Address</div>
                                <div>CCCD: @Model.userInformation.CardId</div>
                                <div>Ngày sinh: @Model.userInformation.Birthday.ToString("dd/MM/yyyy")</div>
                                <div>Giới tính: @Model.userInformation.Sex</div>
                                <div>Email: @Model.user.UserEmail</div>
                                <div>Phone: @Model.userInformation.PhoneNumber</div>
                            </div>
                            <div class="col-sm-6">
                                <h5 class="mb-3">Bên B:</h5>
                                <h3 class="text-dark mb-1">Công ty Bảo Hiểm HiBOC</h3>                                            
                                <div>470 Đ. Trần Đại Nghĩa, Khu đô Thị, Ngũ Hành Sơn, Đà Nẵng</div>
                                <div>Email: HiBoc@gmail.com</div>
                                <div>Phone: +84 123456789</div>
                            </div>
                        </div>
                        <div class="table-responsive-sm">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th class="center">#</th>
                                        <th>Bảo Hiểm</th>
                                        <th>Gói Bảo Hiểm</th>
                                        <th class="right">Chi Phí (<strong>VND</strong>)</th>
                                        <th class="center">SL</th>
                                        <th class="right">Tổng (<strong>VND</strong>)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="center">1</td>
                                        <td class="left strong">@Model.insuranceProducts.ProductName</td>
                                        <td class="left">@Model.packageInsurances.PackageName</td>
                                        <td class="right">@Model.packageInsurances.Price</td>
                                        <td class="center">1</td>
                                        <td class="right">@Model.packageInsurances.Price</td>
                                    </tr>
                                    
                                </tbody>
                            </table>
                        </div>
                        <div class="row">
                            <div class="col-lg-2 col-sm-5">
                            </div>
                            <div class="col-lg-10 col-sm-5 ml-auto">
                                
                                <table class="table table-clear">
                                    <tbody>
                                        <tr>
                                            <td class="col-lg-3">
                                                <strong class="text-dark">Phạm vi bảo hiểm</strong>
                                            </td>
                                            <td class="col-lg-9 txt-center">@Model.packageInsurances.Limit <strong>VND</strong></td>
                                        </tr>
                                        <tr>
                                            <td class="left">
                                                <strong class="text-dark">Thời hạn bảo hiểm</strong>
                                            </td>
                                            <td class="txt-center">@Model.packageInsurances.Duration <strong>Năm</strong></td>
                                        </tr>
                                        <tr>
                                            @{
                                                var count = @Model.benefitDetails.Count() + 1;
                                            }
                                            <th class="left" rowspan="@count">
                                                <strong class="text-dark">Chi tiết quyền lợi</strong>
                                            </th>
                                            
                                            
                                            
                                        </tr>
                                        
                                            @foreach (var item in @Model.benefitDetails)
                                            {
                                                <tr>
                                                    <td class="details">@Html.Raw(item.Content)</td>
                                                </tr>
                                            }
                                            
                                        

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-white">
                        <div class="col-sm-6 pb-2 pb-sm-4 pb-lg-0 pr-0">
                            <label class="be-checkbox custom-control custom-checkbox">
                                
                            </label>
                        </div>
                        <div class="col-sm-6 pl-0">
                            <p class="text-right">
                                <a href="/ContractInsurances/AddBlock?prdId=@Model.insuranceProducts.ProductId&packageId=@Model.packageInsurances.PackageId">
                                <button type="submit"  class="btn btn-space btn-primary">Submit</button>
                                </a>
                                <a href="/Home"><button class="btn btn-space btn-secondary">Cancel</button></a>
                            </p>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>

        

    </div>
</section>

